@model Technical_support.Models.Response

@{
    ViewData["Title"] = "Изменение ответа на заявку";
}

<div class="pagetitle">
    <div class="header-h1">
        <h1>Изменение ответа на заявку</h1>
    </div>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="Index">Главная</a>
            </li>
            <li class="breadcrumb-item">Ответ на заявку</li>
            <li class="breadcrumb-item active">Изменение ответа на заявку</li>
        </ol>
    </nav>
</div>

<div class="cards">
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ResponseId" />
                <div class="form-group" id="mypadding">
                    <label asp-for="RequestId" class="control-label"></label>
                    <input asp-for="RequestId" class="form-control" readonly/>
                    <span asp-validation-for="RequestId" class="text-danger"></span>
                </div>
                <div class="form-group" id="mypadding">
                    <label asp-for="Request.TextRequest" class="control-label"></label>
                    <input asp-for="Request.TextRequest" class="form-control" readonly />
                    <span asp-validation-for="Request.TextRequest" class="text-danger"></span>
                </div>
                <div class="form-group" id="mypadding">
                    <label asp-for="TextResponse" class="control-label"></label>
                    <input asp-for="TextResponse" class="form-control" />
                    <span asp-validation-for="TextResponse" class="text-danger"></span>
                </div>
                <div class="form-group" id="mypadding">
                    <button type="submit" class="btn btn-primary">Изменить</button>
                    <a a asp-controller="Requests" asp-action="Details" asp-route-id="@Model.RequestId"
                    class="btn btn-secondary">Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>

