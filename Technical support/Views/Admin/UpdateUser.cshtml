@model Technical_support.ViewModel.UpdateUser
@{
    ViewData["Title"] = "Обновление данных пользователя";
}

<div class="pagetitle">
    <div class="header-h1">
        <h1>Обновление данных пользователя</h1>
    </div>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="Index">Главная</a>
            </li>
            <li class="breadcrumb-item">Пользователи</li>
            <li class="breadcrumb-item active">Обновление данных пользователя</li>
        </ol>
    </nav>
</div>

<div class="header-h1">
    <h3>Для пользователя @Model.UserName</h3>
</div>

<div class="cards">
    <div class="row">
        <div class="col-md-10">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="UpdateUser" method="post">
                <div class="form-group" id="mypadding">
                    <label asp-for="Id">ID пользователя</label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>
                <div class="form-group" id="mypadding">
                    <label asp-for="UserName">Имя пользователя</label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group" id="mypadding">
                    <label asp-for="Email">E-mail</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group" id="mypadding">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password"/>
                </div>
                <div class="form-group" id="mypadding">
                    <label asp-for="Phone">Телефон</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Сохранить изменения</button>
            </form>
        </div>
    </div>
</div>

