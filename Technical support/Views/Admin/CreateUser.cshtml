@model Technical_support.ViewModel.CreateUser
@{
    ViewBag.Title = "Создание пользователя";
}

<div class="pagetitle">
    <div class="header-h1">
        <h1>Создание пользователя</h1>
    </div>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="Index">Главная</a>
            </li>
            <li class="breadcrumb-item">Пользователи</li>
            <li class="breadcrumb-item active">Создать пользователя</li>
        </ol>
    </nav>
</div>

<div class="cards">
    <div class="row">
        <div class="col-md-10">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form method="post">
                <div class="form-group" id="mypadding">
                    <label asp-for="Name">Имя пользователя:</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group" id="mypadding">
                    <label asp-for="Email">E-mail:</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group" id="mypadding">
                    <label asp-for="Password">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <div class="form-group" id="mypadding">
                    <label asp-for="RoleId"> Роль пользователя</label>
                    <select asp-for="RoleId" class="form-select" asp-items="ViewBag.RoleId"></select>
                </div>
                <div id="mypadding">
                    <button type="submit" class="btn btn-primary">Создать</button>
                </div>
            </form>
        </div>
    </div>
</div>

