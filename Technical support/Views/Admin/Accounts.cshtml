@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Учетные записи";
}

<div class="pagetitle">
    <div class="header-h1">
        <h1>Учетные записи</h1>
    </div>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="Index">Главная</a>
            </li>
            <li class="breadcrumb-item">Пользователи</li>
            <li class="breadcrumb-item active">Учетные записи</li>
        </ol>
    </nav>
</div>

<div class="thbut">
        <a asp-action="CreateUser" class="btn btn-success">Создать нового пользователя</a>
</div>

<div id="tablewidth">
    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>№ п/п</th>
                <th>Id Пользователя</th>
                <th>Имя</th>
                <th>Email</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">Нет ни одной учетной записи</td>
                </tr>
            }
            else
            {
                int count = 1;
                foreach (IdentityUser user in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <div class="thbut">
                                <a class="btn btn-sm btn-primary" asp-action="UpdateUser" asp-route-id="@user.Id">
                                    Обновить
                                </a>
                            </div>
                            <div class="thbut">
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Удалить
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    count++;
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <th>№ п/п</th>
                <th>Id</th>
                <th>Имя</th>
                <th>Email</th>
                <th>Действие</th>
            </tr>
        </tfoot>
    </table>
</div>

