@model Technical_support.Models.ThemeRequest

@{
    ViewData["Title"] = "Изменение темы заявки";
}

<div class="pagetitle">
    <div class="header-h1">
        <h1>Изменение темы заявки</h1>
    </div>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="Index">Главная</a>
            </li>
            <li class="breadcrumb-item">Темы заявок</li>
            <li class="breadcrumb-item active">Изменить</li>
        </ol>
    </nav>
</div>

<div class="cards">
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ThemeId" />
                <div class="form-group">
                    <label asp-for="NameTheme" class="control-label"></label>
                    <input asp-for="NameTheme" class="form-control" />
                    <span asp-validation-for="NameTheme" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescriptionTheme" class="control-label"></label>
                    <textarea asp-for="DescriptionTheme" class="form-control" id="biginput"></textarea>
                    <span asp-validation-for="DescriptionTheme" class="text-danger"></span>
                </div>
                <div id="mypadding">
                    <button type="submit" class="btn btn-primary">Изменить</button>
                </div>
            </form>
        </div>
    </div>
</div>

